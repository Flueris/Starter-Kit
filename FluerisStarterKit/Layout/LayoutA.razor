@inherits LayoutComponentBase

@using Flueris.Components
@using Flueris.Extensions

<div class="page">
    <div class="sidebar">
        <NavMenu />
        <Sidebar DataList="@sidebar_list" Variant="compact" PositionSidebar="right" ColorScheme="light"/>
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    List<SidebarItem> sidebar_list => GetSidebarListCompact();

    private List<SidebarItem> GetSidebarListCompact()
    {
        List<SidebarItem> list = new()
            {
                new SidebarItem { Id = "1", Group = "0", Label = "Counter", URL = "counter", Image = "icon-192.png" },
                new SidebarItem { Id = "2", Group = "0", Label = "Weather ", URL = "weather", Image = "icon-192.png" },
            };

        return list;
    }
}
