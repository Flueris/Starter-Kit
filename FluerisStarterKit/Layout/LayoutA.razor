@inherits LayoutComponentBase

@using Flueris.Components
@using Flueris.Extensions

<div class="page">
    <div class="sidebar">
        <NavMenu />
        <Sidebar DataList="@sidebar_list" Variant="toggle" PositionSidebar="right" ColorScheme="light"/>
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    List<SidebarItem> sidebar_list => SidebarModels.GetSidebarToggle();    
}
